<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>e-Voting Voters - Registration</title>
  <link rel="stylesheet" href="/css/auth/registerVoters.css">
  <script src="https://kit.fontawesome.com/908e1d826a.js" crossorigin="anonymous"></script>
</head>

<body>
  <div class="blob-1"></div>
  <div class="blob-2"></div>
  <div class="blob-3"></div>
  <div class="blob-4"></div>
  <div class="blob-5"></div>
  <div class="blob-6"></div>
  <div class="hero">
    <div class="login-link">
      <div class="login-text">
        <h1>Welcome Back!</h1>
        <h4>To keep connected with us please <br>&nbsp;&nbsp; login with your personal info</h4>
      </div>
      <div class="loginBtn">
        <a href="/login"><button>Sign IN</button></a>
      </div>
    </div>
    <div class="register-form">
      <div class="logo">
        <img src="/img/logo-main3.png" alt="" style="cursor: pointer;">
        <a href="/"><div class="logo-overlay"></div></a>
      </div>
      <div class="navbar">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </div>
      <div class="form-text">
        <h1>Create Account</h1>
        <h3>Register here to be eligible to vote.</h3>
      </div>
      <div class="form">
        <form action="/registerVoter" method="POST">
          <% if(messages.votererr) { %>
            <div class="voter-info error">
              <h3><%= messages.votererr %></h3>
            </div>
          <% } %>  
          <div class="voter-info name-of-voter">
            <div class="fname-of-voter">
              <label for="fname"><i class="fas fa-user"></i></label>
              <input type="text" id="fname" placeholder="First Name" name="fname" value="<%= messages.fname %>">
            </div>
            <div class="lname-of-voter">
              <label for="lname"></label>
              <input type="text" id="lname" placeholder="Last Name (Optional)" name="lname" value="<%= messages.lname %>">
            </div>
          </div>
          <div class="voter-info">
            <label for="email"><i class="fas fa-envelope"></i></label>
            <input type="email" id="email" placeholder="Email" name="email" value="<%= messages.email %>">
          </div>
          <div class="voter-info">
            <label for="password"><i class="fas fa-unlock-alt"></i></label>
            <input type="password" id="password" placeholder="**************" name="password">
          </div>
          <div class="voter-info">
            <label for="semester"><i class="fas fa-graduation-cap"></i></label>
            <input type="text" id="semester" placeholder="Current Semester" name="semester" value="<%= messages.semester %>">
          </div>
          <div class="voter-info">
            <button type="submit">Sign UP</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>

</html>